<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/search_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >

        <Spinner
            android:id="@+id/search_spinner_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/search_doctype_entries"
            android:spinnerMode="dialog" />

        <EditText
            android:id="@+id/search_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Název dokumentu" />

        <EditText
            android:id="@+id/search_input_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Autor" />

        <CheckBox
            android:id="@+id/search_check_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text="Pouze veřejné"
            android:textColor="@color/grey" />
    </LinearLayout>

    <Button
        android:id="@+id/search_advanced"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="Pokročilé volby"
        android:textColor="@color/white"
        android:textSize="14dp" />

</RelativeLayout>