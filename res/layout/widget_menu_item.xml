<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="@dimen/menu_item_icon"
        android:layout_height="@dimen/menu_item_icon"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
        android:layout_marginRight="@dimen/menu_item_icon_margin_right"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/menu_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:lines="1"
        android:layout_gravity="center_vertical"
        android:textColor="@color/menu_item_noraml"
        android:textSize="@dimen/menu_item_title" />

</LinearLayout>