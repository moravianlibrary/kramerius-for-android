<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/domain_item_clickable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/card_selector" />

    <ImageView
        android:id="@+id/domain_item_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_mzk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/domain_item_logo"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/domain_item_title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:lines="1"
            android:text="Moravská zemská knihovna"
            android:textColor="@color/grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/domain_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:lines="1"
            android:text="Digitální knihovna MZK"
            android:textColor="@color/light_grey"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:id="@+id/periodicalvolume_item_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/ic_url_green" />

            <TextView
                android:id="@+id/domain_item_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="5dp"
                android:text="http://kramerius.mzk.cz"
                android:textColor="@color/green"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/domain_item_selected"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_domain_selected"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginRight="10dp" 
        android:layout_marginBottom="10dp" />

</RelativeLayout>