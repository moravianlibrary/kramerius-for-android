<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/card_bg" />

    <ImageView
        android:id="@+id/periodical_item_thumb"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:paddingBottom="4dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/anim_loading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/periodical_item_thumb"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/periodical_item_details"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_card_detail" />

            <TextView
                android:id="@+id/periodical_item_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toLeftOf="@id/periodical_item_details"
                android:lines="2"
                android:text="ROČNÍK: 34"
                android:textColor="@color/grey"
                android:textSize="15dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/periodical_item_info"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:lines="1"
            android:text="ROK VYDÁNÍ: 1923"
            android:textColor="@color/light_grey"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/card_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/periodical_item_actionIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
				android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_attach_green" />


            <ImageView
                android:id="@+id/periodical_item_lockIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_lock" />
            
            
            <TextView
                android:id="@+id/periodical_item_actionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"                
                android:layout_toRightOf="@id/periodical_item_actionIcon"
                android:layout_toLeftOf="@id/periodical_item_lockIcon"
                android:paddingLeft="5dp"
                android:text="Zobrazit čísla"
                android:textColor="@color/green"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>