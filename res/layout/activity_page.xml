<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg" >

    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/page_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="0dp" >

        <FrameLayout
            android:id="@+id/page_viewer_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <fragment
                android:id="@+id/fragmentViewer"
                android:name="cz.mzk.kramerius.app.viewer.PageViewerFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/page_message_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>

        <ImageView
            android:id="@+id/page_loader"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_loader"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/page_topPanel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="@color/green"
            android:clickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/page_metadata"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_about_white" />

            <LinearLayout
                android:id="@+id/page_title_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="45dp"
                android:background="@drawable/ab_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="8dp" >

                <ImageView
                    android:id="@+id/page_drawer_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/ic_navigation_drawer" />

                <TextView
                    android:id="@+id/page_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/page_complex_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/page_complex_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="Rovnost"
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/page_complex_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="Ročník 2334, Číslo 34"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/page_bottomPanel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/green"
            android:clickable="true"
            android:paddingLeft="0dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/page_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_group_white" />

            <TextView
                android:id="@+id/page_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <SeekBar
                android:id="@+id/page_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/page_index"
                android:layout_toRightOf="@id/page_list" />
        </RelativeLayout>

        <TextView
            android:id="@+id/page_seek_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/page_bottomPanel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/seek_index_bg"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:visibility="gone" />

        <fragment
            android:id="@+id/page_listFragment"
            android:name="cz.mzk.kramerius.app.ui.PageSelectionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/page_bottomPanel"
            android:layout_below="@id/page_topPanel" />
    </RelativeLayout>

    <!-- The navigation drawer -->

    <FrameLayout
        android:id="@+id/viewer_menu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>